.container-fluid
  /Imagen
  .row.form-group
    -# Fixme: Versionar tamaño imagen
    = image_tag @ldi.image, :class => "img-responsive img-thumbnail center-block"

  /Mapa
  .row.form-group

    %div{:id => "map", :style => 'width: 800px; height: 400px;', :class => "img-responsive"}

      - if @ldi.lat != nil && @ldi.long !=nil   # Si ldi posee coordenadas propias
        - zoom = 15
      - else
        - zoom = 10

      :javascript
        $( document).ready(function() {
            var mapOptions = {
                center: new google.maps.LatLng("#{@ldi.lat || @ldi.poblacion.lat}", "#{@ldi.long || @ldi.poblacion.long}"),
                zoom: #{zoom},
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };
            var map = new google.maps.Map(document.getElementById("map"),
                mapOptions);
            var marker = new google.maps.Marker({
              position: new google.maps.LatLng("#{@ldi.lat || @ldi.poblacion.lat}", "#{@ldi.long || @ldi.poblacion.long}"),
              map: map
            });
        });

  /Información
  .row
    %dl.dl-horizontal
      %dt
        Ciudad
        %dd
          = @ldi.poblacion.nombre
      %dt
        Categoria
        %dd
          - case @ldi.categoria
            - when "bar_pub"
              %span.glyphicon.glyphicon-glass
              Bar/Pub
            - when "restaurante"
              %span.glyphicon.glyphicon-cutlery
              Restaurante
            - when "naturaleza"
              %span.glyphicon.glyphicon-tree-deciduous
              Naturaleza
            - when "cultural"
              %span.glyphicon.glyphicon-tower
              Cultural
            - when "alojamiento"
              %span.glyphicon.glyphicon-home
              Alojamiento
      %dt
        Valoración
        %dd
          - val = calcular_valoraciones @ldi.id

          - if val == -1
            Sin valoraciones
          - else
            - val.times do
              %span.glyphicon.glyphicon-star
            - (5-val).times do
              %span.glyphicon.glyphicon-star-empty
      - if (@ldi.direccion != nil && !@ldi.direccion.empty?)
        %dt
          Dirección
          %dd
            = @ldi.direccion
      - if (@ldi.cod_postal != nil && !@ldi.cod_postal.empty?)
        %dt
          Código postal
          %dd
            = @ldi.cod_postal
      - if (@ldi.telefono != nil && !@ldi.telefono.empty?)
        %dt
          Teléfono
          %dd
            = @ldi.telefono
      - if (@ldi.email != nil && !@ldi.email.empty?)
        %dt
          Email
          %dd
            = @ldi.email