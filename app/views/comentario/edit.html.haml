.container
  .col-lg-4
    = render :partial => "informacion_ldi"
  .col-lg-1
  .col-lg-7
    .row.well
      %p
        = @ldi.descripcion
    .row
      %strong.lead
        COMENTARIOS
    .row
      -# Nuevo comentario
      -# Fixme: Evitar hardcodear ruta
      = form_tag :controller => "comentario", :action => "update", :id_com => @comentario.id, :id_ldi => @ldi.id do
        = text_area_tag "texto", @comentario.texto, :class => "form-control"
        = submit_tag "Actualizar", :class => "btn btn-default"
      = button_to "Eliminar", {:controller => "comentario", :action => "destroy", :id_com => @comentario.id,
      :id_ldi => @ldi.id}, :method => "delete"
    .row
      = render :partial => "lista_comentarios"