/Begin page content
.container
  .row
    .col-lg-4
      .row
        -#.col-lg-3
        .col-lg-12
          %h2
            = @poblacion.nombre
        -#.col-lg-3
      .row
        = image_tag @poblacion.image, :class => "img-responsive", :size => "300"
      .row
        = image_tag 'agua_map.jpg', :class => "img-responsive"
    .col-lg-1
    .col-lg-7
      .row.well
        %p
          = @poblacion.descripcion
      .row
        %strong.lead
          LUGARES DE INTERÉS
      %div{:class => "row", :align => "right"}

      /For each location
      - @poblacion.ldis.each do |l|
        .row.well
          -# Foto
          .col-lg-2
            =image_tag l.image, :size => "100"

          -# Valoración
          .col-lg-3
            - val = calc_valoraciones l.id

            - if val == -1
              Sin valoraciones
            - else
              - val.times do
                %span.glyphicon.glyphicon-star
              - (5-val).times do
                %span.glyphicon.glyphicon-star-empty

          -# Título
          .col-lg-6
            %h4
              %div
                = link_to :controller => "comentario", :action => "new", :id_ldi => l.id do
                  = l.nombre
              %div
                %small
                  = "#{l.comentarios.count} mensajes"

          -# Icono
          .col-lg-1
            - if l.categoria == "bar_pub"
              %span.glyphicon.glyphicon-glass
            - elsif l.categoria == "restaurante"
              %span.glyphicon.glyphicon-cutlery
            - elsif l.categoria == "naturaleza"
              %span.glyphicon.glyphicon-tree-deciduous
            - elsif l.categoria == "cultural"
              %span.glyphicon.glyphicon-tower
            - elsif l.categoria == "alojamiento"
              %span.glyphicon.glyphicon-home